<div class="topbar">
  <a href="/">
    <img 
        class="logo light-logo" 
        alt="Logo of the site, consists of the letters L and K in black, cursive writing" 
        src="../../../images/logo.svg" 
    >
    <img 
        class="logo dark-logo" 
        alt="Logo of the site, consists of the letters L and K in black, cursive writing" 
        src="../../../images/favicon.svg" 
    >
  </a>
  <span>
    <a href="https://github.com/lenakujath/personal-website">Source</a>
  </span>
  <div class="user-toggle">
    <div role="status" class="visually-hidden js-mode-status"></div>
    <button class="toggle-button js-mode-toggle">
      <span class="toggle-button__text js-mode-toggle-text">Enable dark mode</span>
      <span class="toggle-button__icon" aria-hidden="true"></span>
    </button>
  </div>
</div>
<header id="hero">
    <nav class="nav">
      <ul class="nav-links">
        {% for item in nav.pages %}
        <li>
          <a href="{{ item.url }}" {{ helpers.getLinkActiveState(item.url, page.url) | safe }}>
            <span>{{ item.label }}</span>
          </a>
        </li>
        {% endfor %}
      </ul>
    </nav>
    <div class="title">
      <figure style="{{ style }}">
        <a style="{{ hlink }}" href="{{ href }}">
          <picture>
            <img fetchpriority="high" alt="{{ alt }}" src="{{ image }}">
            <span class="{{ class }}"></span>
          </picture>
        </a>
      </figure>
      <h1>{{ title }}<span class="index-symbol"> {{symbol}}</span></h1>
    </div>
</header>